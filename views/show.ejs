<% include partials/header %>




<br><br><br><br>

<div class="ui main text container segment">
  <div class="ui huge header"> 
    <%= data.title %> 
  </div>

  <div class="item">
    <img class="ui centered rounded image" src="<%= data.image %>">
    
    <div class="content">
      <span> Posted: <%= data.timestamp.toDateString() %></span>
    </div>

    <div class="description">
      <p><%- data.info %></p>
      <!--If you have a dash (instead of an equal sign) before data.info, 
      it'll take what data.info returns and runs it as code (not a string). 
      This is so powerful that you'll need to "sanitize" your script tags 
      (e.g. express sanitizer) in order to ensure cyber security -->
    </div>

    <iframe 
      width="560" 
      height="315" 
      src="http://www.youtube.com/embed/<%= data.video %>?autoplay=0&cc_load_policy=1&color=white&controls=1&showinfo=1&rel=0"    
      frameborder="0" 
      allowfullscreen
    > 
    </iframe>

    <br>

    <a class="ui orange basic button" href="/things/<%= data._id %>/edit">Edit</a>
    <form id="delete" action="/things/<%= data._id %>?_method=DELETE" method="POST">
        <button class="ui red basic button">Delete</button>
    </form>

  </div>
</div>


<br><br><br><br>

